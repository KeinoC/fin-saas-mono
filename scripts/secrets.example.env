# GitHub Secrets Configuration
# Copy this file to secrets.env and fill in your actual values
# DO NOT commit secrets.env to version control!

# =============================================================================
# TESTING & COVERAGE
# =============================================================================

# Codecov token for uploading coverage reports
# Get from: https://codecov.io/ (after connecting your repository)
CODECOV_TOKEN=your_codecov_token_here

# Cypress Dashboard recording key (optional, for test recordings)
# Get from: https://dashboard.cypress.io/ (after setting up project)
CYPRESS_RECORD_KEY=your_cypress_record_key_here

# =============================================================================
# DEPLOYMENT (VERCEL)
# =============================================================================

# Personal Access Token from Vercel
# Get from: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token_here

# Organization/Team ID from Vercel
# Get from: Vercel dashboard -> Settings -> General
VERCEL_ORG_ID=your_vercel_org_id_here

# Project ID from Vercel  
# Get from: Vercel project dashboard -> Settings -> General
VERCEL_PROJECT_ID=your_vercel_project_id_here

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Slack webhook URL for CI/CD notifications
# Set up at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# DATABASE & SERVICES (Production/Staging)
# =============================================================================

# Production database connection string
DATABASE_URL=postgresql://user:password@host:port/database

# Supabase project configuration
# Get from: Supabase dashboard -> Settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# OAUTH & INTEGRATIONS
# =============================================================================

# Google OAuth credentials
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Plaid API credentials  
# Get from: https://dashboard.plaid.com/team/keys
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret_key

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Stripe (if using payments)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# SendGrid (if using email notifications)
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Twilio (if using SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token 