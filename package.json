{
  "name": "k-fin",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "lint": "biome check",
    "format": "biome format --write",
    "type-check": "turbo run type-check",
    "pre-commit": "npm run lint && npm run type-check && npm run test:coverage",
    "ci": "npm run lint && npm run type-check && npm run test:coverage && npm run build",
    "generate-types": "supabase gen types typescript --project-id your-project > types/supabase.ts",
    "setup:storage": "./scripts/setup-supabase-storage.sh",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cypress": "^13.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "turbo": "^2.0.0",
    "typescript": "^5"
  }
}
