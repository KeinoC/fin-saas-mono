{
  "name": "k-fin",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:build": "jest tests/build/",
    "test:smoke": "jest tests/smoke/",
    "test:api": "jest tests/api/",
    "test:production": "jest tests/smoke/production-smoke.test.ts",
    "validate:production": "node scripts/validate-production-readiness.js",
    "lint": "biome check",
    "format": "biome format --write",
    "type-check": "turbo run type-check",
    "pre-commit": "npm run lint && npm run type-check && npm run test:coverage",
    "ci": "npm run lint && npm run type-check && npm run test:coverage && npm run build",
    "generate-types": "supabase gen types typescript --project-id your-project > types/supabase.ts",
    "setup:storage": "./scripts/setup-supabase-storage.sh",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "db:init": "npx tsx scripts/init-sqlite.ts",
    "db:seed": "npx tsx scripts/seed-development.ts",
    "db:test-connection": "npx tsx scripts/test-seed-connection.ts",
    "dev:setup": "npx tsx scripts/setup-dev-environment.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@types/papaparse": "^5.3.16",
    "bcryptjs": "^3.0.2",
    "next": "15.3.4",
    "papaparse": "^5.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cypress": "^13.15.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "tsx": "^4.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5"
  }
}
